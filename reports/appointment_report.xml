<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id="appointment_report" model="ir.actions.report">
        <field name="name">Appointment Report</field>
        <field name="model">hospital.appointment</field>
        <field name="binding_model_id" ref="model_hospital_appointment"/>
        <field name="binding_type">report</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hospital_management.appointment_report_template</field>
    </record>
    <template id="appointment_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout" >
                <t  t-foreach="docs" t-as="record">
                        <t t-set="title">Hospital Appointment Report</t>
                    <h1>Hospital Appointment Report</h1>
                    <table class="oe_table" >
                        <thead>
                            <tr>
                                <th>Appointment</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Last Appointment</th>
                                <th>Appointment Date</th>
                                <th>Duration</th>
                                <th>State</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr >
                                <td><t t-esc="record.name" /></td>
                                <td><t t-esc="record.patient_id.name" /></td>
                                <td><t t-esc="record.doctor_id.name" /></td>
                                <td><t t.field="record.last_appointment.strftime('%Y-%m-%d %H:%M:%S')" /></td>  
                                <td><t t-esc="record.appointment_date.strftime('%Y-%m-%d %H:%M:%S')" /></td>  
                                <td><t t-esc="record.duration" /></td>
                                <td><t t-esc="record.state" /></td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
